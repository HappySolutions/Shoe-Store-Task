<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.shoeList.ShoeItemsFragment">

    <data>
        <variable
            name="shoe"
            type="com.example.shoestoretask.models.Shoe" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/shoesItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
            <TextView
                android:id="@+id/nameText"
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:ellipsize="none"
                android:gravity="center"
                android:text="@string/shoe_name" />
            <TextView
                android:id="@+id/nameTextValu"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:ems="8"
                android:text="@={shoe.name}"
                android:textAlignment="viewStart" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/compText"
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/company"/>
            <TextView
                android:id="@+id/compTextValu"
                style="@style/editTxtStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:ems="8"
                android:text="@={shoe.company}"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/szText"
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/shoe_size"/>
            <TextView
                android:id="@+id/szTextValu"
                style="@style/editTxtStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:ems="8"
                android:text="@={`` +shoe.size}"
                app:layout_constraintBottom_toTopOf="@id/dicsText"
                app:layout_constraintEnd_toEndOf="@+id/discTextValu"
                app:layout_constraintStart_toEndOf="@id/dicsText"
                app:layout_constraintTop_toTopOf="@+id/compTextValu"
                app:layout_constraintHorizontal_bias="0.0"/>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/dicsText"
            style="@style/txtStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:text="@string/discreption"
            android:gravity="center"/>
        <TextView
            android:id="@+id/discTextValu"
            style="@style/editTxtStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:ems="8"
            android:text="@={shoe.description}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>
    </LinearLayout>
</layout>